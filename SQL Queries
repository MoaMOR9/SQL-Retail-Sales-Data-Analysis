-- 1. Total revenue
SELECT SUM(total_amount) AS total_revenue FROM sales;

-- 2. Revenue by category
SELECT product_category, SUM(total_amount) AS category_revenue
FROM sales
GROUP BY product_category
ORDER BY category_revenue DESC;

-- 3. Daily revenue trend
SELECT date, SUM(total_amount) AS daily_revenue
FROM sales
GROUP BY date
ORDER BY date;

-- 4. Monthly revenue trend
SELECT DATE_FORMAT(date, '%Y-%m') AS month, SUM(total_amount) AS monthly_revenue
FROM sales
GROUP BY month
ORDER BY month;

-- 5. Average transaction value
SELECT AVG(total_amount) AS avg_transaction_value
FROM sales;

-- 6. Gender spending analysis
SELECT gender, SUM(total_amount) AS total_spent
FROM sales
GROUP BY gender;

-- 7. Top 10 customers by spending
SELECT customer_id, SUM(total_amount) AS total_spent
FROM sales
GROUP BY customer_id
ORDER BY total_spent DESC
LIMIT 10;

-- 8. Units sold per category
SELECT product_category, SUM(quantity) AS units_sold
FROM sales
GROUP BY product_category
ORDER BY units_sold DESC;

-- 9. Average age per category
SELECT product_category, AVG(age) AS avg_age
FROM sales
GROUP BY product_category;

-- 10. Most expensive transaction
SELECT * FROM sales ORDER BY total_amount DESC LIMIT 1;
